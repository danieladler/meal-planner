<!-- Modified from Railscast #213 -->
<div id="recipes">
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @recipes_by_date[date] %>
      <ul>
        <% @recipes_by_date[date].each do |recipe| %>
          <li><%= recipe.name %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
